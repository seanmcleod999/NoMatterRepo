@model NoMatterWebApi.ViewModels.RunMySqlScriptVm

@{
    ViewBag.Title = "Run Sql Script";
}

<h2>Run Sql Script</h2>

<div class="PageNavigationBar">
    @Html.ActionLink("back to superuser", "Index", "Superuser", null, new { @class = "BackLink" })
</div>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

     
    <div class="editor-label">
    Script
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(m => m.Script, new {style = "width: 800px; height:350px;"})
    </div>
     
    <input type="submit" value="Run script" />
            
       
     if (Model.ScriptExecuted)
      {
            <div class="editor-label">
            Success
            </div>
            <div class="editor-field">
                @Model.Success
            </div>

          if (!Model.Success)
          {
              <div class="editor-label">
                  Script
              </div>
              <div class="editor-field">
                  @Model.ErrorText
              </div>
          }
      }
               
}
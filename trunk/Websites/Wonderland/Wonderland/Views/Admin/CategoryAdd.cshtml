@model NoMatterWebApiModels.ViewModels.AddEditCategoryVm

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "Add Category";
    
}

<link rel="stylesheet" type="text/css" href="@Url.Content("~/RichTextEditor/jquery-te-1.4.0.css")" />
<script type="text/javascript" src="@Url.Content("~/RichTextEditor/jquery-te-1.4.0.min.js")"></script>

<h1>Add Category</h1>

<div class="PageNavigationBar">
    @Html.ActionLink("back to categories", "SectionCategories", "Admin", new { sectionId = Model.Category.SectionId}, new { @class = "BackLink" })
</div>

@using (Html.BeginForm("CategoryAdd", "Admin", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.Category.SectionId)

   
    <div class="editor-label">
       Name
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Category.CategoryName, new {style = "width:300px;"})
        @Html.ValidationMessageFor(model => model.Category.CategoryName)
    </div>
    
     <div class="editor-label">
        Description
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Category.CategoryDescription, new {style = "width:600px;"})
        @Html.ValidationMessageFor(model => model.Category.CategoryDescription)
    </div>
    
    <div class="editor-label">
         Order
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Category.CategoryOrder, new {style = "width:100px;"})
        @Html.ValidationMessageFor(model => model.Category.CategoryOrder)
    </div>
    
     <div class="editor-label">
         Hidden
    </div>
    <div class="editor-field">
        @Html.CheckBoxFor(model => model.Category.Hidden)
        @Html.ValidationMessageFor(model => model.Category.Hidden)
    </div>
    
     <div class="editor-label">
        Picture
    </div>
    <div class="editor-field">
         @Html.TextBoxFor(m => m.Picture, new { type = "file", @class="form-control" })
         @Html.ValidationMessageFor(m => m.Picture)
    </div>
   

    <br/>
    <p>
        <input type="submit" value="Save" class="btn btn-default"/> &nbsp;@Html.ActionLink("cancel", "Sections", "Admin",  new { onclick = "return confirm('Are you sure you wish to cancel? Any unsaved information will be lost.');" })
        
        

    </p>

}


<script type="text/javascript">

$(document).ready(function() {

    $("#Category_CategoryDescription").jqte();
});

</script>




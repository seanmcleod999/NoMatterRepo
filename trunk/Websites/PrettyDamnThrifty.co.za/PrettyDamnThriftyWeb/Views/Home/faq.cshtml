@model SharedLibrary.ViewModels.FaqsVm

@{
    ViewBag.Title = "FAQ's";
}

 <script src="@Url.Content("~/Scripts/GoogleAnalytics.js")" type="text/javascript"></script>



<div class="pageHeader">frequently asked questions</div>

@foreach (var item in Model.Faqs) {
    
    <div class="faqItem">
    
        <h3>
            @item.Heading
        </h3>
    
        @Html.Raw(item.Description)
    
        @if (Request.IsAuthenticated)
        {                     
            @Html.ActionLink("Edit this Faq", "EditFaq", "Admin", new { id = item.FaqId }, new { @class = "EditShopItemLink" })
            @:&nbsp; &nbsp;
            @Html.ActionLink("Delete this Faq", "DeleteFaq", "Admin", new { id = item.FaqId }, new { @class = "DeleteLink", onclick = "return confirm('Are you sure you wish to delete this faq?');" })
        }
        
 
    </div>   
   
}

@if (Request.IsAuthenticated)
{ 
    <br />
    @Html.ActionLink("Add a Faq", "AddFaq", "Admin", null, new { @class = "AddLink" })
}




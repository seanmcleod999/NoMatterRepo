@model NoMatterWebApiModels.ViewModels.AddInitiativeVm

<br/><br/>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <div class="editor-label">
        @Html.LabelFor(model => model.Goal.title)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Goal.title)
        @Html.ValidationMessageFor(model => model.Goal.title)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Goal.description)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Goal.description, new { style = "width:300px;" })
        @Html.ValidationMessageFor(model => model.Goal.description)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Goal.tagline)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Goal.tagline, new {style = "width:300px;"})
        @Html.ValidationMessageFor(model => model.Goal.tagline)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Goal.start_date)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Goal.start_date, new {style = "width:300px;"})
        @Html.ValidationMessageFor(model => model.Goal.start_date)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Goal.end_date)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Goal.end_date, new {style = "width:300px;"})
        @Html.ValidationMessageFor(model => model.Goal.end_date)
    </div>
    
    <div class="editor-label">
        @Html.LabelFor(model => model.Goal.goal_amount)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Goal.goal_amount, new {style = "width:100px;"})
        @Html.ValidationMessageFor(model => model.Goal.goal_amount)
    </div>
    
    <div class="editor-label">
       @Html.LabelFor(model => model.File)
   </div>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.File, new { type = "file" })
        @Html.ValidationMessageFor(m => m.File)
    </div>
   
    
    <br/>
      <p>
        <input type="submit" value="Create" />
    </p>


}
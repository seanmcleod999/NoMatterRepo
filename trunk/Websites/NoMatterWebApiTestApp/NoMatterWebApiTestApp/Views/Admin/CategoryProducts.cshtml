@model NoMatterWebApiModels.ViewModels.CategoryProductsVm
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>

<b>@Model.Section.SectionName</b> --> <b>@Model.Category.CategoryName</b>
<br/>
<br/>

<div class="PageNavigationBar">
@Html.ActionLink("Add Product", "ProductAdd", "Admin", new { categoryId = @Model.Category.CategoryId }, new { @class = "AddLink" })
&nbsp;    
@Html.ActionLink("Back to Categories", "SectionCategories", "Admin", new { sectionId = Model.Section.SectionId}, new { @class = "BackLink" })
</div>


<table class="table_grid">
    <tr>
        <th>
            Title
        </th>
        <th>
            Price
        </th>
        <th>
            Size
        </th>
        <th>
            Hidden
        </th>
        <th>
            Reserved
        </th>
         <th>
            Sold
        </th>
        <th>
            
        </th>
        <th>
            
        </th>
        <th>
            
        </th>
    </tr>

@foreach (var product in Model.CategoryProducts)
{
    <tr>
        
        <td>
            @product.Title
        </td>
        <td>
            R @String.Format("{0:0}", @product.Price)
        </td>
        <td>
            @product.Size
        </td>
        <td>
             @Html.DisplayFor(modelItem => product.Hidden)
        </td>
        <td>
             @Html.DisplayFor(modelItem => product.Reserved)
        </td>
        <td>
             @Html.DisplayFor(modelItem => product.Sold)
        </td>
        
          
        <td>
            @Html.ActionLink("Edit", "ProductEdit", "Admin", new { productId = @product.ProductId }, null)
        </td>
        <td>
            @Html.ActionLink("View", "ViewProduct", "Admin", new { productId = @product.ProductId }, null)
        </td>
         <td>
            @Html.ActionLink("Delete", "DeleteProduct", "Admin", new { productId = @product.ProductId },  new { onclick = "return confirm('Are you sure you wish to delete this product? Note that this will also delete the products history.');" })
        </td>

       
    </tr>
    
    
}
     
</table>



